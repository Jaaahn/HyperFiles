{
    "name": "HyperFiles",
    "version": "1.2.4",
    "main": "./src/index.js",
    "description": "HyperFiles - Do SFTP the easy way",
    "author": {
        "name": "Jaaahn"
    },
    "license": "MIT",
    "scripts": {
        "electron:dev": "electron-forge start",
        "electron:package": "electron-forge package",
        "electron:build": "electron-forge make",
        "electron:publish": "electron-forge publish",
        "vite:dev": "vite",
        "vite:build": "vite build --emptyOutDir",
        "build": "npm run vite:build && npm run electron:build",
        "publish": "npm run vite:build && npm run electron:publish"
    },
    "keywords": [
        "SFTP",
        "HyperUI",
        "Easy",
        "Files",
        "Manager",
        "Server"
    ],
    "devDependencies": {
        "@electron-forge/cli": "^6.0.1",
        "@electron-forge/maker-deb": "^6.0.1",
        "@electron-forge/maker-rpm": "^6.0.1",
        "@electron-forge/maker-squirrel": "^6.0.1",
        "@electron-forge/maker-zip": "^6.0.1",
        "@electron-forge/publisher-github": "*",
        "@vitejs/plugin-vue": "^3.2.0",
        "@vue/compiler-sfc": "^3.2.41",
        "electron": "^21.2.2",
        "sass": "^1.56.0",
        "vite": "^3.2.3"
    },
    "dependencies": {
        "@electron/remote": "^2.0.8",
        "@jaaahn/hyper-ui": "^2.5.0-beta.2",
        "@jaaahn/shared-utils": "^1.0.5",
        "@vueuse/core": "^9.4.0",
        "axios": "^1.1.3",
        "chokidar": "^3.5.3",
        "electron-squirrel-startup": "^1.0.0",
        "filesize": "^9.0.1",
        "hyper-modals": "^1.0.4",
        "keytar": "^7.9.0",
        "lodash": "^4.17.21",
        "p-queue": "^7.3.0",
        "rollup-plugin-license": "^3.0.1",
        "ssh2-sftp-client": "9.0.4",
        "vue": "^3.2.41",
        "vue-router": "^4.1.6"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "icon": "icons/icon.icns"
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "HyperFiles"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "publishers": [
                {
                    "name": "@electron-forge/publisher-github",
                    "config": {
                        "repository": {
                            "owner": "Jaaahn",
                            "name": "HyperFiles"
                        }
                    }
                }
            ]
        }
    }
}
